{
  "env": {
    "node": true,
    "jest": true
  },
  "root": true,
  "ignorePatterns": ["node_modules/", ".next/"],
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["react", "@typescript-eslint", "prettier"]
}
